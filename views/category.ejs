
  <%- include('partials/header') -%>
  
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <div class="text-center d-flex" >
          <div class="text-center w-100">
            <h1 class="display-3 centered"><%=posts[0].category[0].toUpperCase() + posts[0].category.slice(1) %></h1>
          </div>
        </div>
        <% for(var i=0; i<posts.length; i++) {%>

          <% if (posts[i].available==true) { %>
            <li class="col-6 col-lg-4 justify-content-between mt-5">
              <a class="brown link-hover text-decoration-none" href="/<%= posts[i]._id%>">
                <img class="img-fluid" src="<%= posts[i].mainImageURL%>">
                <p class="display-6 brown"><%= posts[i].title %></p>
                <div class="d-flex">
                  <p><%= posts[i].caption %></p>
                  <% if (posts[i].onSale==true) { %>
                    <p class="ps-3"><s>$<%=  Number.parseFloat(posts[i].price).toFixed(2) %></s></p> 
                    <p class="ps-3 text-success">$<%=  Number.parseFloat(posts[i].price - posts[i].discount).toFixed(2) %></p>                   
                  <% } else { %>
                    <p class="ps-3">$<%= Number.parseFloat(posts[i].price).toFixed(2) %></p> 
                  <% } %>
                </div>
              </a>
              </li>
          <% } %>
        <% } %>
        </ul>
    </div>
  </div>
  <a href="/cart" class="shopping-cart" data-product-count= '0'>
    <span class="cart-icon">&#128722;</span>
  </a>
</body>
<script>
  let productCount = 0;
  if (localStorage.getItem("count")) {
      productCount = parseInt(localStorage.getItem("count"));
  }
  document.querySelector('.shopping-cart').setAttribute('data-product-count', productCount)
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>

</html>
